  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": true,
  "trailingComma": "all",
  "arrowParens": "always",
  "bracketSpacing": false,
  "jsxBracketSameLine": true,
  "semi": true,
  "htmlWhitespaceSensitivity": "css",
